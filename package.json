{
  "private": true,
  "engines": {
    "node": ">=22 <26"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack && node ./scripts/generate-feeds.mjs && node ./scripts/generate-sitemap.mjs",
    "serve": "next start",
    "clean": "rm -rf .next .netlify node_modules public/tags && rm -f public/feed.xml public/sitemap.xml",
    "lint": "eslint --max-warnings=0 \"{components,constant,layouts,libs,pages,scripts,types,utils}/**/*.{js,jsx,mjs}\"",
    "lint:fix": "eslint --fix --max-warnings=0 \"{components,constant,layouts,libs,pages,scripts,types,utils}/**/*.{js,jsx,mjs}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e:crawl": "node ./scripts/crawl-sitemap.mjs",
    "optimize:images": "node ./scripts/optimize-images.mjs",
    "perf:lighthouse": "npx --yes @lhci/cli@0.15.1 autorun --config=.lighthouserc.json",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run build"
  },
  "dependencies": {
    "@segment/analytics-next": "^1.81.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "clsx": "^2.1.1",
    "esbuild": "^0.27.3",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "image-size": "^2.0.2",
    "mdast-util-to-string": "^4.0.0",
    "mdx-bundler": "^10.1.1",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-preset-minify": "^7.0.1",
    "rehype-prism-plus": "^2.0.2",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "smoothscroll-polyfill": "^0.4.4",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@netlify/plugin-nextjs": "^5.15.8",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/unist": "^3.0.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globby": "^16.1.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "unist-util-visit": "^5.1.0",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18"
  }
}
